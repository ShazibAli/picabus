<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

            
                        <View
         android:layout_width="fill_parent"
         android:layout_height="65dip"
 />
                        <TextView
            android:id="@+id/loginAtMyPicabusTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/app_blue"
            android:text="@string/login_text"
			 />
			         <ImageButton
            android:id="@+id/loginAtMyPicabusButton"
            android:src="@drawable/mypicabus_icon"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/login_text"
            android:layout_height="wrap_content" />
                        <View
         android:layout_width="fill_parent"
         android:layout_height="30dip"
 />

        <Button
            android:id="@+id/dontLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dont_login_facebook" />


</LinearLayout>