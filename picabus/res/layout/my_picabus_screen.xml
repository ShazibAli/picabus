<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/mypicabus_backgroung_template" >

        <com.zdm.picabus.facebook.LoginButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/small_left_margin"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:paddingTop="@dimen/small_top_margin"
            android:src="@drawable/facebook_login" />

        <TextView
            android:id="@+id/numberOfPointsTillNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:paddingBottom="30dip"
            android:text="1000"
            android:textColor="@color/text_grey"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/facebookProfilePic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/numberOfPointsTillNext"
            android:layout_below="@+id/login"
            android:layout_marginTop="34dp"
            android:maxHeight="90dp"
            android:maxWidth="90dp" />

        <TextView
            android:id="@+id/pointsMyPicabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebookProfilePic"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/facebookProfilePic"
            android:text="1000"
            android:textColor="@color/app_blue"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageMedal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pointsMyPicabus"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/login"
            android:src="@drawable/bronze_medal" />

        <ImageButton
            android:id="@+id/postToFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/facebookProfilePic"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_fb_post_s" />

        <TextView
            android:id="@+id/txtFacebookUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/facebookProfilePic"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/facebookProfilePic"
            android:text="User Name"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shareWithFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/postToFacebook"
            android:layout_toLeftOf="@+id/login"
            android:background="@drawable/button_share_s" />

    </RelativeLayout>

</LinearLayout>