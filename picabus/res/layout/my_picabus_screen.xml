<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

        <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="6dip"
        android:layout_height="?android:attr/listPreferredItemHeight">
        <ImageView
            android:id="@+id/facebookProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip" />
        <TextView
            android:id="@+id/txtFacebookUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/facebookProfilePic" />
        
        <com.zdm.picabus.facebook.LoginButton
            android:id="@+id/login"
            android:src="@drawable/facebook_login"
            android:layout_toRightOf="@+id/facebookProfilePic"
            android:layout_below="@+id/txtFacebookUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
            <View
         android:layout_width="fill_parent"
         android:layout_height="1dip"
         android:background="#FF909090" />
    

 
            <TextView
            android:id="@+id/pointsMyPicabus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
			 />

            <TextView
            android:id="@+id/postToFacebookText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="@string/post_facebook_inst"/>
                        
            <ImageButton
        android:id="@+id/postToFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription=""
        android:src="@drawable/post_to_facebook"
        android:layout_gravity="center"
		/>
             

    
                        <View
         android:layout_width="fill_parent"
         android:layout_height="13dip"
 />
          
                                    <TextView
            android:id="@+id/appRequestText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
                        android:textStyle="italic"
                    android:text="Send picabus app request to friends!"
			 />
                                    
        <Button
        android:id="@+id/sendAppRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/application_icon"

                android:layout_gravity="center"
		/>
    
</LinearLayout>