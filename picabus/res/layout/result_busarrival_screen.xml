<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@drawable/bus_results_bg"
   >

                            <View
         android:layout_width="fill_parent"
         android:layout_height="74dip"
 />
    <LinearLayout
        android:weightSum="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


    <TextView
        android:id="@+id/textViewLine"
            android:layout_weight="35"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
        	android:textColor="#451179"
        	android:text="25"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
    
     <ImageView
        android:id="@+id/iconCompany"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="65"
            android:contentDescription="@string/company_icon"
            android:src="@drawable/dan_icon"
        android:layout_marginRight="2dip"
	 />

    </LinearLayout>
    
                                    <View
         android:layout_width="fill_parent"
         android:layout_height="15dip"
 />
     <TextView
        android:id="@+id/textViewStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#451179"
            android:paddingRight="18dip"
            android:layout_gravity="right"
            android:textSize="13dp"
            android:text="תחנה מרכזית מיאו מיאו"
 />

                                      <View
         android:layout_width="fill_parent"
         android:layout_height="14dip"
 /> 
          <TextView
        android:id="@+id/textViewLastStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="18dip"
            android:textSize="13dp"
            android:textColor="#451179"
                        android:text="תחנה מרכזית מיאו מיאו"
 />
    
                                      <View
         android:layout_width="fill_parent"
         android:layout_height="65dip"
 /> 
    
    
<ListView
    android:id="@+id/android:list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    />
<TextView
    android:id="@+id/android:empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:text="@string/no_eta"/>


</LinearLayout>